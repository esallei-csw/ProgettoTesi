unit PredictiveMaintenanceRT.CellDataModel;

interface

uses
  PredictiveMaintenanceRT.PartialModel, System.Generics.Collections, PredictiveMaintenanceRT.MaintenanceModel;

type
  TCellDataModel = class
    private
    {Private declarations}
    FCellId: integer;
    FMaintenanceData: TMaintenanceModel;
    FPartials: TList<TPartialModel>;


    public
    {Public declarations}
    constructor Create;
    property CellId: integer read FCellId write FCellId;

    function GetMaintenanceData: TMaintenanceModel;
    property MaintenanceData: TMaintenanceModel read GetMaintenanceData write FMaintenanceData;

    function GetPartials: TList<TPartialModel>;
    property Partials: TList<TPartialModel> read GetPartials write FPartials;


  end;

implementation

{ TCellDataModel }

constructor TCellDataModel.Create;
begin
  FCellId := varEmpty;
  FMaintenanceData := nil;
  FPartials := nil;
end;

function TCellDataModel.GetMaintenanceData: TMaintenanceModel;
begin
  if not Assigned(FMaintenanceData) then
    FMaintenanceData := TMaintenanceModel.Create;
  Result := FMaintenanceData;
end;

function TCellDataModel.GetPartials: TList<TPartialModel>;
begin
  if not Assigned(FPartials) then
    FPartials := TList<TPartialModel>.Create;
  Result := FPartials;
end;

end.
